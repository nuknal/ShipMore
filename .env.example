# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Email Service (Resend)
# Get your API key from https://resend.com/docs/api-reference/api-keys/create-api-key
RESEND_API_KEY="your_resend_api_key_here"
RESEND_EMAIL_FROM="your-email@yourdomain.com"
RESEND_EMAIL_HOST=smtp.resend.com
RESEND_EMAIL_PORT=465
RESEND_EMAIL_USERNAME=resend

# Database
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name

# Cloudflare Turnstile (CAPTCHA)
# Get keys from https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# i18n Auto Translator
# API key for automatic translation service
TRANSLATOR_AI_API_KEY=your_translator_api_key
TRANSLATOR_AI_MODEL=deepseek-chat
TRANSLATOR_AI_BASE_URL=https://api.deepseek.com/v1
LOCALES_DIR=src/locales

# Cloudflare R2 Storage
# Get credentials from Cloudflare R2 dashboard
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=your_bucket_name

# Upstash Redis
# Get credentials from https://upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token"
KV_URL="rediss://default:your_kv_token@your-instance.upstash.io:6379"
KV_REST_API_URL="https://your-instance.upstash.io"
KV_REST_API_TOKEN="your_kv_rest_api_token"
KV_REST_API_READ_ONLY_TOKEN="your_kv_readonly_token"
REDIS_URL="rediss://default:your_redis_token@your-instance.upstash.io:6379"

# NextAuth.js Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your_nextauth_secret_here"
AUTH_DRIZZLE_URL=postgresql://username:password@localhost:5432/your_database_name

# OAuth Providers
# Google OAuth - Get from https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth - Get from https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# LLM Providers
# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Google Generative AI
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key

# Moonshot AI
MOONSHOT_API_KEY=your_moonshot_api_key

# Zhipu AI
ZHIPU_API_KEY=your_zhipu_api_key

# Alibaba DashScope
DASHSCOPE_API_KEY=your_dashscope_api_key
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# EPhone AI
EPHONE_API_KEY=your_ephone_api_key
EPHONE_IMG_API_KEY=your_ephone_img_api_key

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key

# KieAI
KIEAI_API_KEY=your_kieai_api_key

# LLM Configuration
# Choose your preferred LLM provider and model
LLM_CHAT_PROVIDER='ephone'
LLM_CHAT_MODEL='gpt-4o-mini'

# Creem.io Payment Provider
# Get credentials from https://creem.io/
CREEM_API_KEY=your_creem_api_key
CREEM_API_ENDPOINT=https://api.creem.io
CREEM_FREE_PRODUCT_ID=your_free_product_id
CREEM_PREMIUM_PRODUCT_ID=your_premium_product_id
CREEM_ULTIMATE_PRODUCT_ID=your_ultimate_product_id
CREEM_WEBHOOK_SECRET=your_webhook_secret

# Anonymous User Configuration
# Generate a UUID for anonymous users
ANONYMOUS_USER_ID=your_anonymous_user_uuid
VISITOR_LOG_API_KEY=your_visitor_log_api_key

# Development Debug (optional)
# NODE_DEBUG=http,https